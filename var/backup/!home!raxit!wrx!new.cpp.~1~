#include <bits/stdc++.h>
using namespace std;

// Shortcuts for "common" data type in contests
typedef long long 		ll;
typedef pair<int,int> 	ii;
typedef vector<int> 	vi;
typedef vector<ii> 		vii;
#define INF 1000000000;
#define REP(i,a,b) for (for i = a; i <= b; i++)

int main () {
	ios::sync_with_stdio(0);
	cin.tie(0);

	int T;
	cin >> T;
	while (T--) {
	  int n, k, a, temp;
	  cin >> n >> k;
  	  int arr[n];
	  temp = k;
	  for (int i = 0; i < n; i++) {
	    cin >> arr[i];
	  }
	  bool flag1 = false, flag2;
	  for (int i = 1; i <= temp || (flag1 != true); i++) {
	    flag2 = false;
	    for (int j = 0; j < n || (flag2 != true); j++) {
	      if (j==(n-1)) {
		cout << k << '\n';
		flag1 = true;
	      }
	      if (arr[i] < arr[j]) {
		arr[j] += 1;
		k--; flag2 = true;
	      }
	    }
	  }
	  cout << -1 << '\n';
	}
	return 0;
}
